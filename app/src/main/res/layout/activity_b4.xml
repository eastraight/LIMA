<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/b4_1"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/down_arrow"
            android:drawableRight="@drawable/down_arrow"
            android:gravity="start|center_vertical"
            android:padding="20dip"
            android:text="@string/b4_1"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b4_0text" />

        <Button
            android:id="@+id/b4_2"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/down_arrow"
            android:drawableRight="@drawable/down_arrow"
            android:gravity="start|center_vertical"
            android:padding="20dip"
            android:text="@string/b4_2"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b4_1layout" />

        <Button
            android:id="@+id/b4_3"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/down_arrow"
            android:drawableRight="@drawable/down_arrow"
            android:gravity="start|center_vertical"
            android:padding="20dip"
            android:text="@string/b4_3"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b4_2layout" />

        <RelativeLayout
            android:id="@+id/b4_1layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b4_1">

            <TextView
                android:id="@+id/b4_1text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/b4_1text"
                android:padding="10dip" />

            <TextView
                android:id="@+id/b4_1text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b4_1text"
                android:gravity="center"
                android:hint="@string/b4_1text2"
                android:padding="20dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/b4_2layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b4_2">

            <TextView
                android:id="@+id/b4_2text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/b4_2text"
                android:padding="10dip" />

            <TextView
                android:id="@+id/b4_2text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b4_2text"
                android:gravity="center"
                android:hint="@string/b4_2text2"
                android:padding="20dip" />
        </RelativeLayout>

        <TextView
            android:id="@+id/b4_0text"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:hint="@string/b4_0text"
            android:padding="20dip"
            android:textColor="#ff000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>